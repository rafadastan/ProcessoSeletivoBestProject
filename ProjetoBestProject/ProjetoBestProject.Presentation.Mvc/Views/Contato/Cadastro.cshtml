@model ProjetoBestProject.Presentation.Mvc.Model.ContatoCadastroModel;

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />
<br />


@using (Html.BeginForm())
{
    <label>Nome do Contato:</label>

    @Html.TextBoxFor(model => model.Nome,
    new
    {
        @class = "form-control col-md-4",
        @autocomplete = "off",
        @placeholder = "Digite aqui"
    })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </span>

    <br />
    <label>Telefone:</label>
    @Html.TextBoxFor(model => model.Telefone,
    new
    {
        @class = "form-control col-md-4",
        @autocomplete = "off",
        @placeholder = "Telefone",
        @id = "telefone",
        @name = "telefone"
    })

    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Telefone)
    </span>
    <br />
    <label>Celular:</label>
    @Html.TextBoxFor(model => model.Celular,
    new
    {
        @class = "form-control col-md-4",
        @autocomplete = "off",
        @placeholder = "Celular",
        @id = "celular",
        @name = "celular"
    })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Celular)
    </span>
    <br />
    <input type="submit" value="Cadastrar Contato"
           class="btn btn-success" />
}

<br />
<br />


@if (Model != null && Model.Contatos != null)
{
    if (Model.Contatos.Count > 0)
    {
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome do Contato</th>
                    <th>Telefone</th>
                    <th>Celular</th>
                    <th>Operações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contatos)
                {
                    <tr>
                        <td>@item.IdContato</td>
                        <td>@item.Nome</td>
                        <td>@item.Telefone</td>
                        <td>@item.Celular</td>
                        <td>
                            <a href="/Contato/Exclusao/@item.IdContato"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm ('Deseja excluir o Contato?');">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5">
                        Quantidade de Contato: @Model.Contatos.Count
                    </td>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <span class="text-danger">Nenhum Contato foi encontrado.</span>
    }
}

<script src="~/js/jquery-3.5.1.min.js"></script>
<script src="~/js/bootstrap.js"></script>

<script type="text/javascript">
    $("#telefone, #celular").mask("(00) 0000-0000");
</script>